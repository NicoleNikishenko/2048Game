<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/pic_start_background">

    <RelativeLayout
        android:id="@+id/first_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="40dp"
        android:background="@drawable/shape_rectangle_white"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_create_board"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Your Board!"
            android:fontFamily="@font/luckiest_guy"
            android:textColor="@color/valueOther"
            android:gravity="center"
            android:textSize="40dp"
            android:layout_marginVertical="20dp"
            android:layout_alignParentStart="true"/>

        <LinearLayout
            android:layoutDirection="ltr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_create_board"
            android:layout_above="@+id/btn_next"
            android:orientation="vertical"
            android:gravity="center">

            <RadioGroup
                android:id="@+id/rg_board_shape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="10dp"
                android:checkedButton="@id/rb_square"
                android:weightSum="2">
                <RadioButton
                    android:id="@+id/rb_square"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="square"
                    android:fontFamily="@font/luckiest_guy"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:textColor="@color/valueOther"
                    android:paddingVertical="15dp"
                    android:paddingHorizontal="5dp"
                    android:button="@null"
                    android:background="@drawable/radio_btn_square" />
                <RadioButton
                    android:id="@+id/rb_rectangle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="rectangle"
                    android:maxLines="1"
                    android:fontFamily="@font/luckiest_guy"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:textColor="@color/valueOther"
                    android:paddingVertical="15dp"
                    android:paddingHorizontal="5dp"
                    android:button="@null"
                    android:background="@drawable/radio_btn_rectangle" />

            </RadioGroup>

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/image_view"
                android:layout_width="250dp"
                android:layout_height="250dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="20dp">
                <ImageButton
                    android:id="@+id/btn_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_arrow_left"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/tv_shape_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 X 3"
                    android:fontFamily="@font/luckiest_guy"
                    android:textColor="@color/valueOther"
                    android:gravity="center"
                    android:textSize="30sp" />
                <ImageButton
                    android:id="@+id/btn_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_arrow_right"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>



        </LinearLayout>




        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="next"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="50dp"
            android:fontFamily="@font/luckiest_guy"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:background="@drawable/btn_rectangle_dark_blue"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/second_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="40dp"
        android:background="@drawable/shape_rectangle_white"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_create_board_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginVertical="20dp"
            android:fontFamily="@font/luckiest_guy"
            android:gravity="center"
            android:text="Create Your Board!"
            android:textColor="@color/valueOther"
            android:textSize="40dp" />
        <TextView
            android:id="@+id/tv_chose_exponent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_create_board_second"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/luckiest_guy"
            android:text="Chose Exponent:"
            android:textColor="@color/valueOther"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_below="@id/tv_chose_exponent"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"

            android:weightSum="2">

            <RadioGroup
                android:layoutDirection="ltr"
                android:id="@+id/rg_exponent_top"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:checkedButton="@id/rb_exponent_2"
                android:orientation="horizontal"
                android:weightSum="2">

                <RadioButton
                    android:id="@+id/rb_exponent_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_btn_exponent"
                    android:button="@null"
                    android:fontFamily="@font/luckiest_guy"
                    android:padding="5dp"
                    android:text="2"
                    android:textAlignment="center"
                    android:textColor="@color/valueOther"
                    android:textSize="40sp" />

                <RadioButton
                    android:id="@+id/rb_exponent_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_btn_exponent"
                    android:button="@null"
                    android:fontFamily="@font/luckiest_guy"
                    android:padding="5dp"
                    android:text="3"
                    android:textAlignment="center"
                    android:textColor="@color/valueOther"
                    android:textSize="40sp" />

            </RadioGroup>

            <RadioGroup
                android:layoutDirection="ltr"
                android:id="@+id/rg_exponent_bottom"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:checkedButton="@id/rb_exponent_2"
                android:orientation="horizontal"
                android:weightSum="2">

                <RadioButton
                    android:id="@+id/rb_exponent_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_btn_exponent"
                    android:button="@null"
                    android:fontFamily="@font/luckiest_guy"
                    android:padding="5dp"
                    android:text="4"
                    android:textAlignment="center"
                    android:textColor="@color/valueOther"
                    android:textSize="40sp" />

                <RadioButton
                    android:id="@+id/rb_exponent_5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_btn_exponent"
                    android:button="@null"
                    android:fontFamily="@font/luckiest_guy"
                    android:padding="5dp"
                    android:text="5"
                    android:textAlignment="center"
                    android:textColor="@color/valueOther"
                    android:textSize="40sp" />

            </RadioGroup>


        </LinearLayout>

        <Button
            android:id="@+id/btn_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="play!"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="50dp"
            android:fontFamily="@font/luckiest_guy"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:background="@drawable/btn_rectangle_dark_blue"/>

    </RelativeLayout>

</LinearLayout>

