<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/pic_game_background_light">

    <LinearLayout
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/pic_menu_bar"
            android:orientation="vertical"
             android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="3"
                android:layout_marginVertical="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/luckiest_guy"
                    android:paddingHorizontal="10dp"
                    android:paddingTop="12dp"
                    android:text="Best :"
                    android:textColor="@color/valueEmpty"
                    android:textSize="30sp" />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/shape_oval_orange"
                    android:fontFamily="@font/luckiest_guy"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="1235"
                    android:textColor="@color/valueEmpty"
                    android:textSize="25sp" />
            </LinearLayout>

             <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="445345"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/luckiest_guy"
                android:maxLines="2"
                android:padding="3dp"
                android:layout_marginBottom="5dp"
                android:textAlignment="center"
                android:textColor="@color/valueEmpty"
                android:textSize="35sp"
                android:textStyle="italic"
                 android:layout_marginHorizontal="80dp"/>

         </LinearLayout>


    <ImageButton
        android:src="@drawable/icon_trophy"
        android:id="@+id/btn_leader_board"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/btn_round_blue"
        android:layout_margin="10dp"
        android:layout_alignParentEnd="true"/>


    <LinearLayout
        android:id="@+id/game_layout"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:background="@drawable/gameboard_cell_shape"
        android:layout_below="@id/menu"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:layout_marginBottom="30dp"
        android:layout_alignBaseline="@id/menu"
        android:layout_above="@id/game_bar">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/score_title"
                android:gravity="center"

                android:textSize="30sp"
                android:textColor="#000"
                android:text="@string/main_score"
                android:layout_marginTop="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/topscore_title"
                android:gravity="center"
                android:textSize="30sp"
                android:textColor="#000"
                android:text="@string/main_topscore"
                android:layout_toRightOf="@id/score_title"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="35dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/score_value"
                android:gravity="center"
                android:textSize="25sp"
                android:textColor="#000"
                android:layout_below="@id/score_title"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/topscore_value"
                android:gravity="center"
                android:textSize="25sp"
                android:textColor="#000"
                android:layout_below="@id/score_title"
                android:layout_toRightOf="@id/score_value"
                android:layout_marginLeft="105dp"/>



    </RelativeLayout>

    <com.example.a2048game.GameView
        android:id="@+id/game_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/game_bar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:paddingHorizontal="40dp"
        android:background="@drawable/pic_menu_bottom_bar"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="30dp">

        <ImageButton
            android:src="@drawable/icon_home"
            android:id="@+id/btn_home"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/btn_round_white"/>
        <ImageButton
            android:src="@drawable/icon_reset"
            android:id="@+id/btn_reset"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/btn_round_white"/>
        <ImageButton
        android:src="@drawable/icon_undo"
        android:id="@+id/btn_undo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/btn_round_white"/>
        <ImageButton
            android:src="@drawable/icon_settings"
            android:id="@+id/btn_settings"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/btn_round_white"/>

    </LinearLayout>

</RelativeLayout>